# Environment variables for the React frontend application

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1

# Application Settings
REACT_APP_NAME=Microsoft Certification Practice Assessment
REACT_APP_VERSION=1.0.0

# Audio Settings
REACT_APP_DEFAULT_VOICE=en-US-JennyNeural
REACT_APP_DEFAULT_SPEECH_RATE=0%
REACT_APP_DEFAULT_SPEECH_PITCH=0%

# Feature Flags
REACT_APP_ENABLE_AUDIO=true
REACT_APP_ENABLE_AUTO_PROGRESSION=true
REACT_APP_ENABLE_VOICE_SELECTION=true

# Debug Settings
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info